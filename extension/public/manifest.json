{
  "manifest_version": 3,  

  "name": "Notion NFT Tool",
  "version": "0.1.0",
  "description": "A tool for Notion NFT",

  "action": {
    "default_popup": "popup.html"
  },

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "web_accessible_resources": [
    "images/*"
  ]
}
